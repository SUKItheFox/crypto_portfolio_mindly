

<%= form_with(model: crypto, local: true) do |form| %>
  

  <div class="field text-center">
    <%= form.label "Cryptocurrency" %><br>      
    <%= form.select :symbol, [["Bitcoin", "BTCEUR"], ["Ethereum", "ETHEUR"], ["Ripple", "XRPUSD"]] %>
  </div>

  <div class="field text-center">
    
    <%= form.number_field :user_id, value: current_user.id, type: "hidden"  %>
  </div>
  <br>
  <div class="field text-center">
    <%= form.label "Amount" %><br>
    <%= form.text_field :amount_owned, id: :crypto_amount_owned, :required => true %>
  </div>
  <br>
  <div class="field text-center">
    <%= form.label "Wallet location" %><br>
    <%= form.text_field :location, id: :crypto_location, :required => true %>
  </div>
  <br>
  <div class="field text-center">
    <%= form.label "Date of purchase" %><br>
    <%= form.text_field :date, id: :crypto_date, value: Date.current.strftime('%d.%m.%Y') %>
  </div>
  <br>

  <div class="actions text-center">
    
    <%= form.submit "Save"%>
  </div>
<% end %>
