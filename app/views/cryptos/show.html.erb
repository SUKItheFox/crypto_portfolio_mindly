

<p>
  <strong>Symbol:</strong>
  <% if @crypto.symbol == "XRPUSD" %>
    <%= "XRPEUR" %>
  <% else %>
    <%= @crypto.symbol %>
  <% end %>
  
</p>

<p>
  <strong>User:</strong>
  <%= @crypto.user_id %>
</p>

<p>
  <strong>Amount owned:</strong>
  <%= @crypto.amount_owned.round %>
</p>

<p>
  <strong>Date of purchase:</strong>
  <%= @crypto.date.strftime("%d.%m.%Y") %>
</p>

<p>
  <strong>Wallet location:</strong>
  <%= @crypto.location %>
</p>

<%= link_to 'Edit', edit_crypto_path(@crypto), :class => "btn btn-default" %> |
<%= link_to 'Back', cryptos_path, :class => "btn btn-default" %>
